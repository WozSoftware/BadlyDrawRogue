<Entities>
  <!-- 
  Temp Id (negative) must be assigned to child entities.
  They only need to be unique per main entity.
  -->
  
  <!-- Tiles - At least one of each tile type -->
  <Entity Type="Tile" Name="Flagstone Floor">
    <Attributes>
      <Attribute Type="TileTypes" Value="0"/>
    </Attributes>
  </Entity>
  
  <Entity Type="Tile" Name="Stone Wall">
    <Attributes>
      <Attribute Type="TileTypes" Value="1"/>
    </Attributes>
    <Flags>
      <Flag Type="BlocksMovement" Value="true"/>
      <Flag Type="BlocksLineOfSight" Value="true"/>
    </Flags>
  </Entity>

  <Entity Type="Tile" Name="Wooden Door">
    <Attributes>
      <Attribute Type="TileTypes" Value="2"/>
    </Attributes>
    <Flags>
      <Flag Type="IsOpen" Value="false"/>
      <Flag Type="BlocksMovement" Value="true"/>
      <Flag Type="BlocksLineOfSight" Value="true"/>
    </Flags>
  </Entity>

  <Entity Type="Tile" Name="Glass Window">
    <Attributes>
      <Attribute Type="TileTypes" Value="3"/>
    </Attributes>
    <Flags>
      <Flag Type="BlocksMovement" Value="true"/>
      <Flag Type="BlocksLineOfSight" Value="false"/>
    </Flags>
  </Entity>
  
  <!-- Players -->
  
  <!-- Other Actors -->
  
  <!-- Clothing -->

  <Entity Type="Item" Name="Leather Helm">
    <Attributes>
      <Attribute Type="ClothingLocation" Value="0"/>
    </Attributes>
    <Flags>
      <Flag Type="IsClothing" Value="true"/>
    </Flags>
    <Entities>
      <Entity Id="-1" Type="CombatAttributes" Name="SlashingStats">
        <Attributes>
          <Attribute Type="DamageType" Value="0"/>
          <Attribute Type="DamageAbsorbed" Value="1"/>
        </Attributes>
      </Entity>
      <Entity Id="-2" Type="CombatAttributes" Name="BluntImpactStats">
        <Attributes>
          <Attribute Type="DamageType" Value="1"/>
          <Attribute Type="DamageAbsorbed" Value="1"/>
        </Attributes>
      </Entity>
    </Entities>
  </Entity>

  <Entity Type="Item" Name="Chainmail Helm">
    <Attributes>
      <Attribute Type="ClothingLocation" Value="0"/>
    </Attributes>
    <Flags>
      <Flag Type="IsClothing" Value="true"/>
    </Flags>
    <Entities>
      <Entity Id="-1" Type="CombatAttributes" Name="SlashingStats">
        <Attributes>
          <Attribute Type="DamageType" Value="0"/>
          <Attribute Type="DamageAbsorbed" Value="2"/>
        </Attributes>
      </Entity>
      <Entity Id="-2" Type="CombatAttributes" Name="BluntImpactStats">
        <Attributes>
          <Attribute Type="DamageType" Value="1"/>
          <Attribute Type="DamageAbsorbed" Value="2"/>
        </Attributes>
      </Entity>
      <Entity Id="-3" Type="CombatAttributes" Name="PiercingStats">
        <Attributes>
          <Attribute Type="DamageType" Value="2"/>
          <Attribute Type="DamageAbsorbed" Value="1"/>
        </Attributes>
      </Entity>
    </Entities>
  </Entity>

  <Entity Type="Item" Name="Platemail Helm">
    <Attributes>
      <Attribute Type="ClothingLocation" Value="0"/>
    </Attributes>
    <Flags>
      <Flag Type="IsClothing" Value="true"/>
    </Flags>
    <Entities>
      <Entity Id="-1" Type="CombatAttributes" Name="SlashingStats">
        <Attributes>
          <Attribute Type="DamageType" Value="0"/>
          <Attribute Type="DamageAbsorbed" Value="3"/>
        </Attributes>
      </Entity>
      <Entity Id="-2" Type="CombatAttributes" Name="BluntImpactStats">
        <Attributes>
          <Attribute Type="DamageType" Value="1"/>
          <Attribute Type="DamageAbsorbed" Value="3"/>
        </Attributes>
      </Entity>
      <Entity Id="-3" Type="CombatAttributes" Name="PiercingStats">
        <Attributes>
          <Attribute Type="DamageType" Value="2"/>
          <Attribute Type="DamageAbsorbed" Value="3"/>
        </Attributes>
      </Entity>
    </Entities>
  </Entity>

  <!-- Weapons -->

  <Entity Type="Item" Name="Sword">
    <Attributes>
      <Attribute Type="DamageType" Value="0"/>
      <Attribute Type="DamageInflicted" Value="8"/>
    </Attributes>
    <Flags>
      <Flag Type="IsWeapon" Value="true"/>
    </Flags>
  </Entity>

  <Entity Type="Item" Name="Knife">
    <Attributes>
      <Attribute Type="DamageType" Value="0"/>
      <Attribute Type="DamageInflicted" Value="5"/>
    </Attributes>
    <Flags>
      <Flag Type="IsWeapon" Value="true"/>
    </Flags>
  </Entity>

  <Entity Type="Item" Name="Axe">
    <Attributes>
      <Attribute Type="DamageType" Value="0"/>
      <Attribute Type="DamageInflicted" Value="8"/>
    </Attributes>
    <Flags>
      <Flag Type="IsWeapon" Value="true"/>
    </Flags>
  </Entity>

</Entities>

